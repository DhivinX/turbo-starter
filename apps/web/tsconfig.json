{
  "extends": "tsconfig/base.json",

  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "jsx": "preserve",
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    "types": [
      "vite/client",
      "vitest",
      "vitest/globals",
      "@intlify/unplugin-vue-i18n/messages"
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "shared": ["../../libs/shared/src/index.ts"]
    }
  },

  "files": [],

  "include": [
    "./src/components.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "**/*.json"
  ]
}
